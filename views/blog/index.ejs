<html lang="en">

<%- include("../partials/head.ejs") %>

  <body>
    <%- include ("../partials/nav.ejs")%>
      <div class="container">
        <div class="blogs content">
          <h2 class="my-5 text-center">All Blogs</h2>
        </div>
        <div class="container">
          <% blogs.forEach(e=> { %>
            <a href="/blogs/<%- e._id %>" class="text-dark">
              <div class="col border border-dark my-2 rounded p-2">
                <h4 class="d-block mt-3">
                  <%- e.name %>
                </h4>
            </a>
            <p class="">
              <%= e.body %>
            </p>
            <div class="text-right text-muted">
              <%- e.snippet%>
            </div>
        </div>

        <% }) %>

      </div>
      </div>
      <%- include ("../partials/footer.ejs") %>

  </body>

</html>